FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "DU|diffusionT"
    {
		tolerance       1e-10;
		relTol          0.1;
		minIter         1;
		maxIter         50;
		solver          PCG;
		preconditioner  DIC;
    }
}

solidMechanics
{
    // Maximum number of momentum correctors
    nCorrectors            100000;

    // Solution tolerances
    DU                     1e-6;
    relDU                  1e-6;
    materials              1e-3;

    // Frequency of writing the residuals
    infoFrequency          100;

    // Enable thermal stress
    thermalStress          no;
    
}

relaxationFactors
{
    equations
    {
        DU           0.9;
    }
}
