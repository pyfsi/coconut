file set-batch-options n n n
(enable-dynamic-mesh-node-ids #t)
;file start "transcript_setup.txt"
file read-case 2D_left.msh
grid check
grid modify-zones zone-type 2 fluid

define user-defined user-defined-memory 11

define models unsteady-1st-order y
define models viscous laminar y
define models solver pressure-based y
define models energy y n n n y
define models solidification-melting? yes , , ,
solve set equations flow n

define materials copy fluid air pcm
define materials change-create pcm , yes constant 870 yes constant 2500 yes constant 2.4 yes constant 0.004 no yes 8.61e-4 y 179000 y 299.15 y 299.15 n

define boundary-conditions fluid , y pcm n n n n , n , n y n
define boundary-conditions wall adiabatic 0 n 0 n n n 0 y motion-bc-stationary n n 0 n ,
;Outer wall is adiabatic as well
define boundary-conditions wall wall 0 n 0 n n n 0 y motion-bc-stationary n n 0 n ,
define boundary-conditions wall boundary 0 n 0 n n n 0 y motion-bc-stationary n n 0 n ,

;define operating-conditions operating-pressure 0
define operating-conditions gravity n

define dynamic-mesh dynamic-mesh y n n n n
define dynamic-mesh controls smoothing y
define dynamic-mesh controls smoothing-parameters smoothing-method diffusion
define dynamic-mesh controls smoothing-parameters diffusion-coeff-function boundary-distance
define dynamic-mesh controls smoothing-parameters diffusion-coeff-parameter 0.5
define dynamic-mesh controls smoothing-parameters max-iter 50
define dynamic-mesh controls layering n
define dynamic-mesh controls remeshing n
define dynamic-mesh zones create adiabatic deforming faceted n y n n , , , n y
;define dynamic-mesh zones create 2 deforming y all n n 0.0006 0.0100 0.5

solve monitors residual check-convergence y
solve monitors residual convergence-criteria 1e-12

solve set discretization-scheme temperature 0
solve set gradient-scheme n y
;solve set under-relaxation temperature 0.3

;solve set reporting-interval 10
;solve set flow-warnings n

;Initialise solid at melting temp.
solve initialize set-defaults temperature 299.15
solve initialize initialize-flow

file write-case-data pc_solid.cas.h5
exit
