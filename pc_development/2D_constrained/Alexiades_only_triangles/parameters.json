{
  "settings": {
    "timestep_start": 0,
    "number_of_timesteps": 120000,
    "delta_t": 0.01,
    "save_restart": 10000
  },
  "coupled_solver": {
    "type": "coupled_solvers.aitken",
    "settings": {
      "omega_max": 0.8,
      "write_results": 10,
      "debug": false,
      "model": {
        "type": "coupled_solvers.models.ls",
        "settings": {
          "min_significant": 1e-13,
          "q": 10
        }
      }
    },
    "predictor": {
      "type": "predictors.linear"
    },
    "convergence_criterion": {
      "type": "convergence_criteria.or",
      "settings": {
        "criteria_list": [
          {
            "type": "convergence_criteria.iteration_limit",
            "settings": {
              "maximum": 10
            }
          },
          {
            "type": "convergence_criteria.relative_norm",
            "settings": {
              "tolerance": 1e-3,
              "order": 2
            }
          },
          {
            "type": "convergence_criteria.absolute_norm",
            "settings": {
              "tolerance": 1e-15,
              "order": 2
            }
          }
        ]
      }
    },
    "solver_wrappers": [
      {
        "type": "solver_wrappers.pc_fluent.v2024R2",
        "settings": {
          "working_directory": "CFD_2",
          "case_file": "2D_fluid.cas.h5",
          "dimensions": 2,
          "unsteady": true,
          "multiphase": false,
          "debug": false,
          "PC": {
            "moving_boundary": true,
            "latent": 60000,
            "melt_temp": 505.0,
            "ini_condition": 0
          },
          "thread_names": [
            "boundary"
          ],
          "interface_input": [
            {
              "model_part": "boundary_in_nodes",
              "variables": [
                "displacement"
              ]
            }
          ],
          "interface_output": [
            {
              "model_part": "boundary_out_faces",
              "variables": [
                "heat_flux"
              ]
            }
          ],
          "cores": 12,
          "fluent_gui": false,
          "max_nodes_per_face": 2,
          "flow_iterations": 100,
          "save_results": 5000
        }
      },
      {
        "type": "solver_wrappers.mapped",
        "settings": {
          "solver_wrapper": {
            "type": "solver_wrappers.python.pc_saturated_solid",
            "settings": {
              "working_directory": "CFD_1",
              "input_file": "solver_parameters.json",
              "interface_input": [
                {
                  "model_part": "boundary_in_faces",
                  "variables": [
                    "heat_flux"
                  ]
                }
              ],
              "interface_output": [
                {
                  "model_part": "boundary_out_nodes",
                  "variables": [
                    "displacement"
                  ]
                }
              ]
            }
          },
          "mapper_interface_input": {
            "type": "mappers.interface",
            "settings": {
              "type": "mappers.linear",
              "settings": {
                "directions": [
                  "x",
                  "y"
                ]
              }
            }
          },
          "mapper_interface_output": {
            "type": "mappers.interface",
            "settings": {
              "type": "mappers.linear",
              "settings": {
                "directions": [
                  "x",
                  "y"
                ]
              }
            }
          }
        }
      }
    ]
  }
}
