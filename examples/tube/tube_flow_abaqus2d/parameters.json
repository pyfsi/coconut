{
  "settings": {
    "number_of_timesteps": 100
  },
  "coupled_solver": {
    "type": "coupled_solvers.iqni",
    "settings": {
      "timestep_start": 0,
      "delta_t": 0.0001,
      "omega": 0.05,
      "save_results": 1,
      "model": {
        "type": "coupled_solvers.models.ls",
        "settings": {
          "min_significant": 1e-10,
          "q": 10
        }
      }
    },
    "predictor": {
      "type": "predictors.linear"
    },
    "convergence_criterion": {
      "type": "convergence_criteria.or",
      "settings": {
        "criteria_list": [
          {
            "type": "convergence_criteria.iteration_limit",
            "settings": {
              "maximum": 20
            }
          },
          {
            "type": "convergence_criteria.relative_norm",
            "settings": {
              "tolerance": 1e-6,
              "order": 2
            }
          }
        ]
      }
    },
    "solver_wrappers": [
      {
        "type": "solver_wrappers.python.tube_flow_solver",
        "settings": {
          "working_directory": "CFD",
          "input_file": "solver_parameters_pressure.json",
          "interface_input": [
            {
              "model_part": "wall",
              "variables": [
                "displacement"
              ]
            }
          ],
          "interface_output": [
            {
              "model_part": "wall",
              "variables": [
                "pressure",
                "traction"
              ]
            }
          ]
        }
      },
      {
        "type": "solver_wrappers.mapped",
        "settings": {
          "solver_wrapper": {
            "type": "solver_wrappers.abaqus.v2024",
            "settings": {
              "working_directory": "CSM",
              "cores": 1,
              "dimensions": 2,
              "arraysize": 1e5,
              "interface_input": [
                {
                  "model_part": "BEAMINSIDEMOVING_load_points",
                  "variables": [
                    "pressure",
                    "traction"
                  ]
                }
              ],
              "interface_output": [
                {
                  "model_part": "BEAMINSIDEMOVING_nodes",
                  "variables": [
                    "displacement"
                  ]
                }
              ],
              "input_file": "case_tube2d.inp"
            }
          },
          "mapper_interface_input": {
            "type": "mappers.interface",
            "settings": {
              "type": "mappers.combined",
              "settings": {
                "mappers": [
                  {
                    "type": "mappers.permutation",
                    "settings": {
                      "permutation": [
                        1,
                        2,
                        0
                      ]
                    }
                  },
                  {
                    "type": "mappers.linear",
                    "settings": {
                      "directions": [
                        "x",
                        "y"
                      ]
                    }
                  }
                ]
              }
            }
          },
          "mapper_interface_output": {
            "type": "mappers.interface",
            "settings": {
              "type": "mappers.combined",
              "settings": {
                "mappers": [
                  {
                    "type": "mappers.linear",
                    "settings": {
                      "directions": [
                        "x",
                        "y"
                      ]
                    }
                  },
                  {
                    "type": "mappers.permutation",
                    "settings": {
                      "permutation": [
                        2,
                        0,
                        1
                      ]
                    }
                  }
                ]
              }
            }
          }
        }
      }
    ]
  }
}
