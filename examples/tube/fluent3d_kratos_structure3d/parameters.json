{
  "settings": {
    "timestep_start": 0,
    "number_of_timesteps": 100,
    "delta_t": 0.0001,
    "save_restart": 0
  },
  "coupled_solver": {
    "type": "coupled_solvers.iqni",
    "settings": {
      "omega": 0.01,
      "write_results": 1,
      "model": {
        "type": "coupled_solvers.models.ls",
        "settings": {
          "min_significant": 1e-09,
          "q": 10
        }
      }
    },
    "predictor": {
      "type": "predictors.linear"
    },
    "convergence_criterion": {
      "type": "convergence_criteria.or",
      "settings": {
        "criteria_list": [
          {
            "type": "convergence_criteria.iteration_limit",
            "settings": {
              "maximum": 20
            }
          },
          {
            "type": "convergence_criteria.relative_norm",
            "settings": {
              "tolerance": 1e-3,
              "order": 2
            }
          }
        ]
      }
    },
    "solver_wrappers": [
      {
        "type": "solver_wrappers.fluent.v2025R2",
        "settings": {
          "working_directory": "CFD",
          "case_file": "case_tube3d.cas.h5",
          "dimensions": 3,
          "unsteady": true,
          "thread_names": [
            "wall"
          ],
          "interface_input": [
            {
              "model_part": "wall_nodes",
              "variables": [
                "displacement"
              ]
            }
          ],
          "interface_output": [
            {
              "model_part": "wall_faces",
              "variables": [
                "pressure",
                "traction"
              ]
            }
          ],
          "cores": 6,
          "fluent_gui": false,
          "max_nodes_per_face": 4,
          "flow_iterations": 200,
          "save_results": 1
        }
      },
      {
        "type": "solver_wrappers.mapped",
        "settings": {
          "solver_wrapper": {
            "type": "solver_wrappers.kratos_structure.v94",
            "settings": {
              "working_directory": "CSM",
              "input_file": "ProjectParameters.json",
              "kratos_interface_sub_model_parts_list": [
                "SurfaceLoad3D_tube"
              ],
              "pressure_directions": [
                1
              ],
              "interface_input": [
                {
                  "model_part": "SurfaceLoad3D_tube_input",
                  "variables": [
                    "pressure",
                    "traction"
                  ]
                }
              ],
              "interface_output": [
                {
                  "model_part": "SurfaceLoad3D_tube_output",
                  "variables": [
                    "displacement"
                  ]
                }
              ],
              "residual_variables": [
                "RESIDUAL DISPLACEMENT",
                "DISPLACEMENT"
              ]
            }
          },
          "mapper_interface_input": {
            "type": "mappers.interface",
            "settings": {
              "type": "mappers.radial_basis",
              "settings": {
                "directions": [
                  "x",
                  "y",
                  "z"
                ]
              }
            }
          },
          "mapper_interface_output": {
            "type": "mappers.interface",
            "settings": {
              "type": "mappers.radial_basis",
              "settings": {
                "directions": [
                  "x",
                  "y",
                  "z"
                ]
              }
            }
          }
        }
      }
    ]
  }
}
