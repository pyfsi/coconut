{
  "settings": {
    "timestep_start": 0,
    "number_of_timesteps": 100,
    "delta_t": 0.0001,
    "save_restart": -10
  },
  "coupled_solver": {
    "type": "coupled_solvers.iqni",
    "settings": {
      "omega": 0.01,
      "write_results": 1,
      "model": {
        "type": "coupled_solvers.models.ls",
        "settings": {
          "min_significant": 1e-09,
          "q": 10
        }
      }
    },
    "predictor": {
      "type": "predictors.linear"
    },
    "convergence_criterion": {
      "type": "convergence_criteria.or",
      "settings": {
        "criteria_list": [
          {
            "type": "convergence_criteria.iteration_limit",
            "settings": {
              "maximum": 20
            }
          },
          {
            "type": "convergence_criteria.relative_norm",
            "settings": {
              "tolerance": 1e-3,
              "order": 2
            }
          }
        ]
      }
    },
    "solver_wrappers": [
      {
        "type": "solver_wrappers.openfoam.v11",
        "settings": {
          "working_directory": "CFD",
          "application": "coconut_foamRun",
          "boundary_names": [
            "mantle"
          ],
          "interface_input": [
            {
              "model_part": "mantle_input",
              "variables": [
                "displacement"
              ]
            }
          ],
          "interface_output": [
            {
              "model_part": "mantle_output",
              "variables": [
                "pressure",
                "traction"
              ]
            }
          ],
          "time_precision": 5,
          "density": 1000,
          "parallel": true,
          "residual_variables": [
            "Ux",
            "Uy",
            "Uz",
            "p"
          ]
        }
      },
      {
        "type": "solver_wrappers.mapped",
        "settings": {
          "solver_wrapper": {
            "type": "solver_wrappers.abaqus.v2024",
            "settings": {
              "working_directory": "CSM",
              "cores": 1,
              "dimensions": 3,
              "arraysize": 1e5,
              "interface_input": [
                {
                  "model_part": "WALLOUTSIDE_load_points",
                  "variables": [
                    "pressure",
                    "traction"
                  ]
                }
              ],
              "interface_output": [
                {
                  "model_part": "WALLOUTSIDE_nodes",
                  "variables": [
                    "displacement"
                  ]
                }
              ],
              "input_file": "case_tube3d.inp"
            }
          },
          "mapper_interface_input": {
            "type": "mappers.interface",
            "settings": {
              "type": "mappers.radial_basis",
              "settings": {
                "directions": [
                  "x",
                  "y",
                  "z"
                ]
              }
            }
          },
          "mapper_interface_output": {
            "type": "mappers.interface",
            "settings": {
              "type": "mappers.radial_basis",
              "settings": {
                "directions": [
                  "x",
                  "y",
                  "z"
                ]
              }
            }
          }
        }
      }
    ]
  }
}
