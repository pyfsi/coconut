FoamFile
{
    version     2.0;
    format      ascii;
    class       pointVectorField;
    object      pointDisplacement;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    ".*"
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }

    top
    {
        type            slip;
    }

    bottom
    {
        type            slip;
    }

    plateTop
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }

    plateEnd
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }

    plateBottom
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
} 

